<% @articles.each do |a| %>

  <div class="article row clearfix">
    <h2>
      <%= link_to a.title, user_article_path(a.user, a) %> (<%= pluralize(a.comments.count, "comment") %>)<br />
      <small class="author">created by: <%= link_to a.user.username, a.user %></small>
    </h2>
  </div>

<% end %>
