<!DOCTYPE html>
<html>
  <head>
    <title>Noteworthy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert"><%= notice %></div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

    <nav>
      <ul>
      <span><%= link_to "Home", root_path %></span>
        <% if user_signed_in? %>
          <span><%= link_to "New Article", new_user_article_path(current_user) %></span>
          <span><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></span>
        <% else %>
          <span><%= link_to "Sign In", new_user_session_path %></span>
          <span><%= link_to "Sign Up", new_user_registration_path %></span>
        <% end %>
      </ul>
    </nav>

    <div class="container">

      <%= yield %>

    </div>

  </body>
</html>
